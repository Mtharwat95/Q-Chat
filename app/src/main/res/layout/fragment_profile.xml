<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/home">

    <RelativeLayout
        android:id="@+id/profileBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bar"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:text="@string/title_profile"
            android:textColor="@color/appGreen"
            android:textStyle="bold"
            android:textSize="25sp"
            tools:ignore="RelativeOverlap,RtlSymmetry"
            android:layout_alignParentLeft="true"
            android:padding="8dp" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <ProgressBar
        android:id="@+id/profileProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_below="@id/profileBar"/>

    <RelativeLayout
        android:layout_below="@id/profileBar"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/forgetPassword"
            android:layout_centerInParent="false"
            android:orientation="vertical"
            android:layout_margin="@dimen/h8">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/appGreen"
                android:background="@drawable/ic_profile_24dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/bioId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/bio"
                    android:textColor="@color/red"
                    android:padding="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextViewStyle"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/bioId"
                    android:maxLines="3"
                    android:lines="3"
                    android:inputType="textMultiLine"
                    android:layout_toEndOf="@+id/bioId"
                    android:padding="8dp"
                    android:layout_margin="2dp"
                    tools:ignore="TextViewEdits" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/nameId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/name"
                    android:textColor="@color/red"
                    android:padding="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextViewStyle"
                    android:layout_toRightOf="@+id/nameId"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/nameId"
                    android:padding="8dp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/emailId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/your_e_mail"
                    android:textColor="@color/red"
                    android:padding="8dp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextViewStyle"
                    android:layout_toRightOf="@+id/emailId"
                    android:layout_toEndOf="@+id/emailId"
                    android:padding="8dp"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/genderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/sex"
                    android:textColor="@color/red"
                    android:padding="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextViewStyle"
                    android:layout_toRightOf="@+id/genderId"
                    android:layout_toEndOf="@+id/genderId"
                    android:padding="8dp"
                    android:gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/countryId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/country"
                    android:textColor="@color/red"
                    android:padding="8dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    style="@style/TextViewStyle"
                    android:layout_toRightOf="@+id/countryId"
                    android:layout_toEndOf="@+id/countryId"
                    android:padding="8dp"
                    android:gravity="center" />
            </RelativeLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/forget_your_password"
            android:textColor="@color/realRed"
            android:textSize="15sp"
            android:textStyle="italic"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_margin="8dp"
            tools:ignore="SmallSp" />

    </RelativeLayout>

</RelativeLayout>